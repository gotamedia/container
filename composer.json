{
    "name": "atoms/container",
    "description": "Implementations of PSR-11.",
    "homepage": "https://bitbucket.org/gotamedia/container",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Pettersson",
            "email": "peter.pettersson@gotamedia.se"
        }
    ],
    "autoload": {
        "psr-4": {
            "Atoms\\Container\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "psr/container": "~1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.2",
        "squizlabs/php_codesniffer": "~3.0",
        "phpmd/phpmd": "~2.6",
        "phan/phan": "~1.1"
    },
    "scripts": {
        "test": "exit 0",
        "lint": "phpcs --standard=PSR2 --exclude=PSR2.ControlStructures.ControlStructureSpacing src",
        "analyze": "phpmd src text phpmd.xml; phan --output-mode text --color --allow-polyfill-parser"
    }
}
